import pyfiglet

def print_Creative(text):
    ascii_art = pyfiglet.figlet_format(text)
    print(ascii_art)

def main ():
    Creative_name = str(input("Please enter your name: "))
    Creative_dreamjob = str(input("What is your dream job? "))
    Creative_hobby = str(input("Please enter your hobby: "))
    Creative_talent = str(input("What is your talent? "))
    
    print("Hi!")
    print_Creative(Creative_name)

    print("Your dream job is to become a")
    print_Creative(Creative_dreamjob)

    print("Your hobby is ")
    print_Creative(Creative_hobby)
    
    print("Your talent is ")
    print_Creative(Creative_talent)

if __name__ == "__main__":
    main()
